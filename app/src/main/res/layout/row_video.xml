<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/black"
    android:backgroundTint="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="60dp"
        android:background="@color/black"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp">

        <ImageView android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <Button
            android:background="@drawable/playbutton_grid_small"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">

        <com.nvinfosoft.glitcheditor.UtilsAndAdapters.EditorMetaFont
            android:textSize="14dp"
            android:textColor="#04D50C"
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:textColorHint="#04D50C"
            android:layout_height="wrap_content"
            android:text="video.mp4"
            android:singleLine="true"/>

        <com.nvinfosoft.glitcheditor.UtilsAndAdapters.EditorMetaFont
            android:textSize="12dp"
            android:textColor="#04D50C"
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="duration"
            android:singleLine="true"
            android:alpha="0.5"/>

    </LinearLayout>
</LinearLayout>
